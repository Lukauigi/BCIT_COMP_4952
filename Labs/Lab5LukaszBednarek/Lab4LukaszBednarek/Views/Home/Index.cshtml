@model List<Movie>
@{
    ViewBag.Title = "My Movies";
}
<h2>Movie List</h2>

<a asp-controller="Functionality" asp-action="Add">Add New Movie</a>
<table class="table table-borderd table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model) {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>@movie.CategoryId</td>
                <td>
                    <a asp-controller="Functionality" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a>
                    <a asp-controller="Functionality" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
